<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form -->
    <record id="view_ai_config_form" model="ir.ui.view">
        <field name="name">ai.config.form</field>
        <field name="model">ai.config</field>
        <field name="arch" type="xml">
            <form string="AI Configuration">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-check-square">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="provider"/>
                            <field name="api_key" password="True"/>
                        </group>
                        <group>
                            <field name="model_name"/>
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                        </group>
                    </group>
                    <group string="System Prompt">
                        <field name="system_prompt" nolabel="1" 
                               placeholder="Inserisci le istruzioni per l'AI..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List -->
    <record id="view_ai_config_tree" model="ir.ui.view">
        <field name="name">ai.config.tree</field>
        <field name="model">ai.config</field>
        <field name="arch" type="xml">
            <list string="AI Configurations">
                <field name="name"/>
                <field name="provider"/>
                <field name="model_name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_config" model="ir.actions.act_window">
        <field name="name">AI Configuration</field>
        <field name="res_model">ai.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea la tua prima configurazione AI
            </p>
            <p>
                Configura le credenziali API per integrare l'AI nella chat.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ai_livebot_root"
              name="AI LiveBot"
              sequence="100"/>
    
    <menuitem id="menu_ai_config"
              name="AI Configuration"
              parent="menu_ai_livebot_root"
              action="action_ai_config"
              sequence="10"/>
</odoo>
